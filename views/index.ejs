<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Video Upload and Voting</title>
</head>
<body>
  <h1>Upload a Video</h1>
  <form action="/upload" method="post" enctype="multipart/form-data">
    <input type="file" name="video" accept=".mp4">
    <input type="text" name="title" placeholder="Video Title">
    <button type="submit">Upload</button>
  </form>

  <h1>Vote for a Video</h1>
  <form action="/vote" method="post">
    <input type="text" name="videoId" placeholder="Video ID">
    <button type="submit">Vote</button>
  </form>

  <h1>Stream a Video</h1>
  <ul>
    <% videos.forEach(video => { %>
      <li>
        <a href="/videoplayer/<%= video._id %>"><%= video.title %></a>
      </li>
    <% }); %>
  </ul>
</body>
</html>
